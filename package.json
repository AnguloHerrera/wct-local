{
  "name": "wct-local",
  "version": "1.0.0",
  "description": "WCT plugin that enables support for local browsers via Selenium",
  "keywords": [
    "wct",
    "web-component-tester",
    "plugin"
  ],
  "homepage": "https://github.com/Polymer/wct-local",
  "bugs": "https://github.com/Polymer/wct-local/issues",
  "license": {
    "type": "BSD-3-Clause",
    "url": "http://polymer.github.io/LICENSE.txt"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Polymer/wct-local.git"
  },
  "main": "lib/plugin.js",
  "scripts": {
    "postinstall": "node scripts/postinstall.js"
  },
  "wct-plugin": {
    "cli-options": {
      "browsers": {
        "help":    "Local browsers to run tests on, or 'all'.",
        "full":    "local",
        "metavar": "NAME",
        "abbr":    "l",
        "list":    true
      },
      "seleniumPort": {
        "help":    "The port of a running selenium server to use.",
        "full":    "selenium-port"
      }
    }
  },
  "devDependencies": {
    "gulp": "^3.8.10",
    "gulp-jshint": "^1.9.0",
    "jshint-stylish": "^1.0.0"
  },
  "dependencies": {
    "chalk": "^0.5.1",
    "cleankill": "^1.0.0",
    "freeport": "^1.0.4",
    "launchpad": "^0.4.4",
    "lodash": "^2.4.1",
    "selenium-standalone": "^3.0.3",
    "which": "^1.0.8"
  }
}
